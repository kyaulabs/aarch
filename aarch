desc "Config: [0mPackage Defaults"
_AA_CMD="Modify: /etc/pacman.conf"
/usr/bin/sed -i -e 's/#Color/Color/' -e 's/#CacheDir    = \/var\/cache\/pacman\/pkg\//CacheDir = \/var\/cache\/makepkg\//' /mnt/etc/pacman.conf >/dev/null 2>&1
