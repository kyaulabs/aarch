P_DEPLOYMENT="development"		# "development", "integration", "staging", "production"
P_LOCATION="Rack A1, Unit 5"	# Machine Datacenter Location
P_NESTED=1						# Nested Virtualization
P_HOST_INTERFACE="eth0"         # WAN/Host Interface
